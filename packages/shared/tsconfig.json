{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "outDir": "dist",
    "rootDir": "src",

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src"]
}
