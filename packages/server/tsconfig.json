{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@space-combat/shared": ["../shared/dist/index.d.ts"]
    },
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2022",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
